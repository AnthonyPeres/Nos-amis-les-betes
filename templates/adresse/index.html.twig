{% extends "base.html.twig" %}

{% block titre %}
    {{ parent() }} : Les adresses
{% endblock %}

{% block contenu %}
    <h3>Voici la liste des adresses :</h3>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.intitule }}</td>
                <td>
                    <a href="{{ path('adresse_show', {'id': adresse.id}) }}">voir</a>
                    <a href="{{ path('adresse_edit', {'id': adresse.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune adresse trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('adresse_new') }}">Créer une nouvelle adresse</a>
{% endblock %}