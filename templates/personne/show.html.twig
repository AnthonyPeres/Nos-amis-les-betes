{% extends "base.html.twig" %}

{% block titre %}
    {{ parent() }} : Personne
{% endblock %}

{% block contenu %}
    <h3>Voici une personne :</h3>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ personne.sexe }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ personne.age }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('personne/_delete_form.html.twig') }}
        {% endif %}
        
        {% if is_granted('ROLE_SECRETAIRE') %}
            <a href="{{ path('personne_edit', {'id': personne.id}) }}">Modifier</a>
        {% endif %}
    </div>
    
    <br/>

    <a href="{{ path('personne_index') }}">Retourner Ã  la liste des personnes</a>
{% endblock %}